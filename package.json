{
  "name": "solid-chrome-extension-template",
  "displayName": "Solid Chrome Extension Template",
  "version": "1.0.0",
  "description": "Chrome Extension boilerplate with SolidJS + Vite + ManifestV3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thearturca/solid-chrome-extension-template.git"
  },
  "scripts": {
    "dev": "vite build -w",
    "build": "vite build",
    "lint": "eslint . --fix --ignore-pattern='!.*'",
    "fmt": "prettier --write .",
    "dev:nodemon": "nodemon",
    "build:noemit": "tsc --noEmit && vite build",
    "test": "vitest run --coverage",
    "test:dev": "vitest"
  },
  "type": "module",
  "dependencies": {
    "solid-js": "^1.8.19"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.25",
    "@eslint/js": "^9.8.0",
    "@solidjs/testing-library": "^0.8.9",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "0.0.269",
    "@types/node": "20.14.14",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.5",
    "autoprefixer": "^10.4.20",
    "babel-preset-solid": "^1.8.19",
    "eslint": "9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "6.9.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-solid": "^0.14.1",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "globals": "^15.9.0",
    "jsdom": "^24.1.1",
    "nodemon": "3.1.4",
    "postcss": "^8.4.40",
    "prettier": "3.3.3",
    "sass": "1.77.8",
    "typescript": "5.5.4",
    "typescript-eslint": "^8.0.0",
    "vite": "5.3.5",
    "vite-plugin-solid": "^2.10.2",
    "vite-plugin-windicss": "^1.9.3",
    "vitest": "^2.0.5"
  }
}
